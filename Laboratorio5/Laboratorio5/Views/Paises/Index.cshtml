@{
	ViewData["Title"] = "Paises";
}
@{
	Laboratorio5.Handlers.PaisesHandler paisesHandler = new Laboratorio5.Handlers.PaisesHandler();
    var paises = paisesHandler.ObtenerPaises();
}


<h1>@ViewBag.MainTitle</h1>

<div>
	<h1>Lista de Paises</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Idioma</th>
				<th>Continente</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in paises)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Nombre</td>
					<td>@item.Idioma</td>
					<td>@item.Continente</td>
				</tr>
			}
		</tbody>
	</table>

</div>